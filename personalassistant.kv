#:kivy 1.10.0
#:import tr __main__.tr
# coding: utf-8

<MainScreen>:
    btn: button1
    label: label1
    txt_input: text_input
    scrollable_label: slabel

    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgb: 0.26, 0.74, 0.96
        Rectangle:
            pos: 0, self.height * 0.9
            size: self.width, self.height * 0.1
        Color:
            rgb: 0, 0, 0
        Line:
            rectangle: 400, 30, 380, 430


    Label:
        pos_hint: {'y': 0.45}
        text: 'Personal Assistant'

    Label:
        color: 0, 0, 0, 1
        text: tr._('Results')
        center_x: 595
        y: 475
        text_size: self.size

    Label:
        id: label1
        color: 0, 0, 0, 1
        text: tr._('Press the button to ask a question')
        text_size: self.size
        size_hint: None, None
        size: 300, 40
        pos: 50, 450

    Button:
        id: button1
        background_color: 0.22, 0.72, 0.2, 1
        text: tr._('Start')
        on_press: root.btn1_pressed()
        size_hint: None, None
        size: 200, 50
        pos: 50, 370

    Label:
        color: 0, 0, 0, 1
        text: tr._('Or write your question below and press Ok')
        text_size: self.size
        size_hint: None, None
        size: 280, 40
        pos: 50, 280

    TextInput:
        id: text_input
        size_hint: None, None
        size: 200, 80
        pos: 50, 180

    Button:
        size_hint: None, None
        size: 40, 40
        text: tr._('Ok')
        pos: 280, 200
        on_press: root.btn2_pressed()

    Button: 
        size_hint: None, None
        size: 100, 50
        background_color: 0.88, 0.09, 0.09, 1
        text: tr._('Cancel question')
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        on_press: root.cancel()
        pos: 50, 70

    Button:
        size_hint: None, None
        size: 100, 50
        text: tr._('Mute')
        halign: 'center'
        valign: 'middle'
        on_press: root.mute()   
        pos: 180, 70

    Button:
        size_hint: None, None
        size: 70, 20
        pos_hint: {'right': 0.9, 'top': 1}
        text: tr._('Greek')
        on_release: app.lang = 'el'

    Button:
        size_hint: None, None
        size: 70, 20
        pos_hint: {'right': 1, 'top': 1}
        text: tr._('English')  
        on_release: app.lang = 'en'  

    ScrollView:
        id: slabel
        pos: 410, 70
        size_hint: None, None
        size: 370, 380
        mylabel: label2
        Label:
            id: label2
            text: ''
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'left'
            valign: 'middle'
            color: 0, 0, 0, 1
    

